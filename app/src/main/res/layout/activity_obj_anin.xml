<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.tengfei.fairy.widget.ActionBarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:hideSearch="true"
        app:titleStr="属性动画"></com.tengfei.fairy.widget.ActionBarView>
    <TextView
       style="@style/SortTextView"
        android:layout_margin="@dimen/dp_10"
        android:text="属性动画基础功能"/>
;    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_obj_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="属性缩放"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_obj_rota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="属性旋转"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_obj_alph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="属性透明度"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_obj_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="属性位移"
            android:textSize="8sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_property"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@color/color_5184FA"
        android:text="Property Animation"/>

