<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.tengfei.fairy.wedget.ActionBarView
        android:id="@+id/view_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:hideSearch="true"
        app:showDividers="none"
        app:titleStr="基础知识" />
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/myText"
                android:id="@+id/tv_html"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="Html.fromHtml">
            </TextView>
            <TextView
                android:id="@+id/tv_html_forhtml1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10">
            </TextView>
            <EditText
                android:id="@+id/et_html_forhtml2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@null">
            </EditText>
            <TextView
               style="@style/myText"
                android:id="@+id/tv_pattern"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="Pattern">
            </TextView>
            <TextView
                style="@style/myText"
                android:id="@+id/tv_throwable"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="Throwable">
            </TextView>
            <TextView
                style="@style/myText"
                android:id="@+id/tv_bitmap"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="Bitmap操作"></TextView>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/normalText"
                    android:id="@+id/tv_rotate"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="旋转"/>
                <TextView
                    style="@style/normalText"
                    android:id="@+id/tv_enlarge"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="放大"/>
                <TextView
                    style="@style/normalText"
                    android:id="@+id/tv_narrow"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="缩小"/>
                <TextView
                    style="@style/normalText"
                    android:id="@+id/tv_cutting"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="裁剪"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>